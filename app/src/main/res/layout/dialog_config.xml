            </LinearLayout>

        </LinearLayout>

        <!-- Section Horaires -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/section_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
